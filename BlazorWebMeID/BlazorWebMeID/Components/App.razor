@code 
{
    [CascadingParameter] HttpContext Context { get; set; } = default!;


    public string? GetNonce()
    {
        if (Context.Items.TryGetValue("nonce", out var item) && item is string nonce and not null)
        {
            return nonce;
        }

        return null;
    }
}